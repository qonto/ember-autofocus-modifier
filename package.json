{
  "name": "ember-autofocus-modifier",
  "version": "6.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:qonto/ember-autofocus-modifier.git"
  },
  "license": "MIT",
  "author": "",
  "scripts": {
    "build": "pnpm --filter ember-autofocus-modifier build",
    "lint": "pnpm --filter '*' lint",
    "lint:fix": "pnpm --filter '*' lint:fix",
    "lint:types": "pnpm --filter '*' lint:types",
    "prepare": "pnpm build",
    "start": "concurrently 'pnpm:start:*' --restart-after 5000 --prefix-colors cyan,white,yellow",
    "start:addon": "pnpm --filter ember-autofocus-modifier start",
    "start:test-app": "pnpm --filter test-app start",
    "test": "pnpm --filter '*' test"
  },
  "devDependencies": {
    "@release-it-plugins/lerna-changelog": "^5.0.0",
    "@release-it-plugins/workspaces": "^4.0.0",
    "concurrently": "^8.2.1",
    "prettier": "^3.0.3",
    "release-it": "^15.11.0"
  },
  "engines": {
    "node": ">= 18"
  },
  "volta": {
    "node": "18.14.2"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      },
      "@release-it-plugins/workspaces": true
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  },
  "pnpm": {
    "overrides": {
      "ember-source": "4.12.2"
    }
  }
}
